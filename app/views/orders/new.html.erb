<div class="span12">

	<table class="table table-striped">
		<tbody>
		<% @order.order_products.each do |item| %>
			<tr>
				<td><%= item.title %></td>

				<td><%= image_tag item.image(:thumb) %></td>

				<td><%= quid item.price_in_pence %></td>

				<td><%= link_to product_basket_path(item.product), method: :delete, class: "btn-small btn-danger" do %>Remove
				<i class="icon icon-remove"></i></td>

				<% end %> 

				</tr>
		<% end %>
	</tbody>

	<tfoot>
		<tr>
			<td colspan="2">Total price</td>
			<td><%=  quid @order.total_price %></td>
			<td></td>
		</tr>
	</tfoot>

	</table>

	<%= simple_form_for @order do |f| %>

		<%= f.input :name %>
		<%= f.input :email %>
		<%= f.input :address_1 %>
		<%= f.input :address_2 %>
		<%= f.input :city %>
		<%= f.input :postcode %>

		<%= f.input :stripe_card_token, as: :hidden %>

		<div class="field">
			<label>Credit card number</label>
			<%= text_field_tag :card_number %>
		</div>

		<div class="field">
			<label>Security code</label>
			<%= text_field_tag :card_code %>
		</div>

		<div class="field">
			<label>Expiration date</label>
			<%= select_month nil, { add_month_number:true }, { name: nil, id: "card_month"} %>
			<%= select_year nil, { start_year: Date.today.year, end_year: Date.today.year + 15 }, { name: nil, id: "card_year"} %>
		</div>

	<%= f.button :submit, "Place order", class: "btn btn-success" %>

	<% end %>



	

</div>